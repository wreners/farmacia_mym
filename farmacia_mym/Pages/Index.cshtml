@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/ind.css" />

<div class="text-center">
    <h1 class="display-4">LOGIN</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Usuario</a>
</div>

<!-- Sección de Módulos -->
<div class="container mt-4">
    <h2 class="text-center">PANEL DE ADMINISTRACIÓN</h2>

    <div class="row">
        <!-- Tarjeta de Inventario -->
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">GESTIÓN DE INVENTARIO</h5>
                    <p class="card-text">Administra los productos en stock.</p>
                    <button class="btn btn-info" data-bs-toggle="modal" data-bs-target="#modalInventario">
                        <i class="fas fa-eye"></i> Ver
                    </button>
                    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#editInventario">
                        <i class="fas fa-pencil-alt"></i> Editar
                    </button>
                </div>
            </div>
        </div>

        <!-- Tarjeta de Ventas -->
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">REGISTRO DE VENTAS</h5>
                    <p class="card-text">Registra las ventas diarias de la farmacia.</p>
                    <button class="btn btn-info" data-bs-toggle="modal" data-bs-target="#modalVentas">
                        <i class="fas fa-eye"></i> Ver
                    </button>
                    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#editVentas">
                        <i class="fas fa-pencil-alt"></i> Editar
                    </button>
                </div>
            </div>
        </div>

        <!-- Tarjeta de Caja -->
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">CAJA</h5>
                    <p class="card-text">Controla los ingresos y egresos.</p>
                    <button class="btn btn-info" data-bs-toggle="modal" data-bs-target="#modalCaja">
                        <i class="fas fa-eye"></i> Ver
                    </button>
                    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#editCaja">
                        <i class="fas fa-pencil-alt"></i> Editar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- MODALES -->
<div class="modal fade" id="modalInventario" tabindex="-1" aria-labelledby="modalInventarioLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalInventarioLabel">Detalles de Inventario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Aquí se mostrarán los detalles del inventario.
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editInventario" tabindex="-1" aria-labelledby="editInventarioLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editInventarioLabel">Editar Inventario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Formulario para editar el inventario.
            </div>
        </div>
    </div>
</div>

<!-- MODAL VENTAS -->
<div class="modal fade" id="modalVentas" tabindex="-1" aria-labelledby="modalVentasLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalVentasLabel">Detalles de Ventas</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Aquí se mostrarán los detalles de ventas.
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editVentas" tabindex="-1" aria-labelledby="editVentasLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editVentasLabel">Editar Ventas</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Formulario para editar las ventas.
            </div>
        </div>
    </div>
</div>

<!-- MODAL CAJA -->
<div class="modal fade" id="modalCaja" tabindex="-1" aria-labelledby="modalCajaLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCajaLabel">Detalles de Caja</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Aquí se mostrarán los detalles de caja.
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editCaja" tabindex="-1" aria-labelledby="editCajaLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editCajaLabel">Editar Caja</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Formulario para editar la caja.
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
