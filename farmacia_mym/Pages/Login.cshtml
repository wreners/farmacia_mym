@page
@model farmacia_mym.Pages.LoginModel
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null;
}

<link rel="stylesheet" href="~/css/login.css" />
<div class="justify-content-center">
    <img src="~/images/lgo.jpg" alt="Logo de Farmacia M&M" class="logo" />
</div>

<link rel="stylesheet" href="~/css/login.css" />

<div class="row justify-content-center">
    <div class="col-md-4">
        <form method="post" class="login-form">
            <h1 class="text-center">@ViewData["Title"]</h1>
            <img src="~/images/Usuario Login.png" alt="Logo de Farmacia M&M" class="login user" /> 
            <div class="form-group">
                <label asp-for="User"></label>
                <input asp-for="User" class="form-control" placeholder="Nombre de usuario" required />
                <span asp-validation-for="User" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" id="password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">INGRESO</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}