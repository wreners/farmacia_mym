@page
@model farmacia_mym.Pages.Usuarios.EliminarModel
@{
    ViewData["Title"] = "Eliminar Usuario";
    Layout = "/Pages/Shared/AdminLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h3>¿Estás seguro de que deseas eliminar este usuario?</h3>
<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario.Telefono)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Telefono)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario.Rol)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Rol)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.User)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario.Clave)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Clave)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Usuario.Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-page="Index">Volver a la Lista</a>
    </form>
</div>
